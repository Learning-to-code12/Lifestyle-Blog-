<%- include('partials/header') %>
<% if(message.length > 0){ %>
	<div class="flashMessage">
			 <h3><%=message%></h3>
	</div>

<% } %>
<div class="limiter">
	<div class="container-login100">
		<div class="login100-more" style="background-image: url('https://images.unsplash.com/photo-1502945015378-0e284ca1a5be?ixlib=rb-1.2.1&ixid=MXwxMjA3fDB8MHxzZWFyY2h8Mjl8fGRlc2t8ZW58MHx8MHw%3D&auto=format&fit=crop&w=500&q=60');"></div>

		<div class="wrap-login100 p-l-50 p-r-50 p-t-72 p-b-50">
			<form action="/SignUp" method="POST" class="login100-form validate-form">
				<span class="login100-form-title p-b-59">
					Sign In
				</span>
					<div class="google">
					<a type="button" class="btn btn-success" href="/auth/google" role="button">
						<i class="fab fa-google"></i>
						 Sign in with Google
					 </a>
					</div>
					<div class="google">
					<a type="button" class="btn btn-primary" href="/auth/facebook" role="button">
						<i class="fab fa-facebook"></i>
						 Sign in with Facebook
					 </a>
					</div>


				<div class="wrap-input100 validate-input" data-validate="Username is required">
					<span class="label-input100">Username</span>
					<input class="input100" type="text" name="name" placeholder="Username..." required>
					<span class="focus-input100"></span>
				</div>

				<div class="wrap-input100 validate-input" data-validate = "Valid email is required: ex@abc.xyz">
					<span class="label-input100">Email</span>

					<input  class="input100" type="text" name="email" required
					placeholder="Email addess..." pattern=".+@gmail.com"
					title="Please provide a valid e-mail address only +@gmail.com">
					<span class="focus-input100"></span>
				</div>

				<div class="wrap-input100 validate-input" data-validate = "Password is required">
					<span class="label-input100">Password</span>
					<input class="input100" id="password" type="password" name="password" placeholder="*************" required>
					<span class="focus-input100"></span>
				</div>
				<i class="wrap-signin-input fas fa-eye fa-lg" id="togglePassword"></i>

				<div>
					<label for="terms_and_conditions">I agree to the <a href="https://learning-to-code12.github.io/policies/" class="txt2 hov1">Terms and Conditions</a></label>
        <input type="checkbox" id="terms_and_conditions" value="1"/>
				</div>
				<div class="flex-m w-full p-b-33">
					<div class="contact100-form-checkbox">
							<span class="txt1">
								Already registered?
								<a href="/Login" class="txt2 hov1">
									Login
								</a>
							</span>
					</div>
				</div>

				<div class="button" id="button-6">
				 <div id="spin"></div>
				 <button type="submit" class="sign" disabled>SIGN IN</button>
			 </div>

			</form>
		</div>
	</div>
</div>

<script type="text/javascript">
	togglePassword.addEventListener('click', function (e) {
    const type = password.getAttribute('type') === 'password' ? 'text' : 'password';
    password.setAttribute('type', type);
    this.classList.toggle('fa-eye-slash');
	});

	$('#terms_and_conditions').click(function(){
    if($(this).is(':checked')){
        $('.sign').attr("disabled", false);
    } else{
        $('.sign').attr("disabled", true);
    }
});

</script>

</body>
</html>
