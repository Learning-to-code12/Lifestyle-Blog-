  <body>
    <div class="container">


<div id="timeline_container">
<!-- <header> -->
<%    if (masterEmail == myDetails.email) { %>
  <h1 style="position: absolute; bottom: 1000px">MY ACCOUNT</h1>
<% }else{ %>
  <h1 style="position: absolute; bottom: 800px">MY ACCOUNT</h1>
<% }%>
<!-- </header> -->
<ul>
  <li class="active">
    <div class="event_icn icon-address"></div>
    <div class="event_content">
      <h2>User Details</h2>
      <p>
        <h4>Username:</h4> <p><%= myDetails.name %></p>
        <br>
        <h4>Full Name:</h4> <p><%= myDetails.first_name%> <%= myDetails.last_name%></p>
      </p>
    </div>
  </li>
  <li>
    <div class="event_icn icon-address"></div>
    <div class="event_content">
      <h2>Contact</h2>
      <p>
        <h4>Email:</h4> <p><%= myDetails.email %></p>
        <br>
        <h4>Phone Number:</h4> <p><%= myDetails.phone_number %></p>
        <br>
        <h4>Social Link:</h4> <p><%= myDetails.social_link %></p>
      </p>
    </div>
  </li>
  <li>
    <div class="event_icn icon-address"></div>
    <div class="event_content">
      <h2>About</h2>
      <p>
        <%= myDetails.about %>
      </p>
    </div>
  </li>
<%    if (masterEmail == myDetails.email) { %>
  <li>
    <div class="event_icn icon-address"></div>
    <div class="event_content">
      <h2>Posts Info</h2>
      <p>
        <h4>Total Posts:</h4> <p><%= t_posts %></p>
        <br>
        <h4>Public Posts:</h4> <p><%= pb_posts %></p>
        <br>
        <h4>Private Posts:</h4> <p><%= pr_posts %></p>
      </p>
    </div>
  </li>
  <div>
    <a id="last1" class="myButton" href="/allPosts"><button class="btnP btn-three">My posts</button></a>
      <a id="last2" class="myButton deleteAccount"><button class="btnP btn-three">Delete Account</button></a>

  </div>
  <%  } else { %>
    <div class="last1">
      <a class="myButton" href="/allPosts/<%= myDetails.email%>"><button class="btnP btn-three">All Posts</button></a>

    </div>
  <%  }  %>

</ul>

</div>




  <script type="text/javascript">
    //*****************************delete*********************************************
    const trashcan = document.querySelector('a.deleteAccount');
    trashcan.addEventListener('click', (e) =>{
      const endPoint = `/account/<%= myDetails.email %>`;
      fetch(endPoint, {
        method: 'DELETE'
      })
      .then(() => {
        window.location.reload(true);
        window.location.href = "/";

      })
      .catch(err => console.log(err));
    })


  </script>

</div>
