<!-- navbar -->
  <nav id="top" class="navbar navbar-default">
    <div class="container">
      <div class="navbar-header">
        <p id="brand" class="navbar-brand"><a href="/" class="mainHeadingUrl">Lifestyle|Blog</a></p>
      </div>
        <ul class="nav navbar-nav navbar-right">
          <!-- 6 -->
          <li id="home"><a href="/"><b>HOME</b></a></li>
          <li><a href="/allPosts"><b>ALL POSTS</b></a></li>
